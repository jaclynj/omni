<%= form_tag purchases_path do %>
  <script
    src="https://checkout.stripe.com/checkout.js" class="stripe-button"
    data-key="pk_test_uSaMNMcoEa39gLEs7Exnkbe4"
    data-image="/assets/logo.png"
    data-name="Omni"
    data-description="<%= purchaseable.description %>"
    data-amount=<%= (purchaseable.cost*100).to_i %>
    data-locale="en"
    data-currency="USD">
  </script>
  <%= hidden_field_tag :purchaseable_id, purchaseable.id %>
  <%= hidden_field_tag :purchaseable_type, purchaseable.class.name %>
<%= hidden_field_tag :amount, (purchaseable.cost*100).to_i %>
<% end %>